{% extends "core/base.jinja" %}

{% block content %}
    <h2>Edit user profile</h2>
    <form action="" method="post">
        {% csrf_token %}
        {{ form.as_p() }}
        <p><input type="submit" value="Update" /></p>
    </form>
    {% if form.instance == user %}
        <p><a href="{{ url('core:password_change') }}">Change my password</a></p>
    {% endif %}
{% endblock %}




